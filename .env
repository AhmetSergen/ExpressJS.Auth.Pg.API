# Database 
# DATABASE_URL=postgres://<username>:<password>@localhost:<port>/<database_name>
DATABASE_URL=postgres://postgres:password@localhost:5432/AuthDB
DATABASE_NAME=AuthDB
SCHEMA_NAME=auth
PORT=3000

# Token Parameters
SECRET_ACCESS_TOKEN=<my_secret_access_token>
ACCESS_TOKEN_EXPIRY=15m
SECRET_REFRESH_TOKEN=<my_secret_refresh_token>
REFRESH_TOKEN_EXPIRY=7d
REFRESH_TOKEN_STORAGE_COUNT=5
PASSWORD_RESET_TOKEN_EXPIRY_MINUTES=10
CHANGE_EMAIL_TOKEN_EXPIRY_MINUTES=10
ACCESS_TOKEN_COOKIE_MAX_AGE=900000
REFRESH_TOKEN_COOKIE_MAX_AGE=86400000

# Nodemailer 
NODEMAILER_HOST=sandbox.smtp.mailtrap.io
NODEMAILER_PORT=<nodemailer_port>
NODEMAILER_USER=<nodemailer_user>
NODEMAILER_PASS=<nodemailer_pass>
FROM_MAIL="ExpressJS Auth Pg API <noreply@expressjsauthpgapi.com>"
